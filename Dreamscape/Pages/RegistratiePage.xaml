<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Dreamscape.Pages.RegistratiePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dreamscape.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f2f2f2">

        <!-- Main Card -->
        <Border Width="520"
                Padding="55"
                CornerRadius="24"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#e5e5e5"
                BorderThickness="1">

            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <StackPanel Spacing="30">

                <!-- Header -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="DREAMSCAPE"
                               FontSize="26"
                               FontWeight="SemiBold"
                               CharacterSpacing="200"
                               Foreground="Black"/>
                    <TextBlock Text="MEMBERSHIP REGISTRATION"
                               FontSize="12"
                               Foreground="#888888"
                               CharacterSpacing="150"/>
                </StackPanel>

                <Rectangle Height="1"
                           Fill="#eeeeee"/>

                <!-- Username -->
                <StackPanel Spacing="6">
                    <TextBlock Text="CREATE USERNAME"
                               FontSize="12"
                               Foreground="#666666"
                               CharacterSpacing="120"/>
                    <TextBox x:Name="UsernameTextBox"
                             Height="48"
                             CornerRadius="12"
                             Background="#fafafa"
                             BorderBrush="#dddddd"
                             Padding="15,0"
                             PlaceholderText="Choose exclusive username"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Spacing="6">
                    <TextBlock Text="EMAIL"
                FontSize="12"
                Foreground="#666666"
                CharacterSpacing="120"/>
                    <TextBox x:Name="EmailTextBox"
              Height="48"
              CornerRadius="12"
              Background="#fafafa"
              BorderBrush="#dddddd"
              Padding="15,0"
              PlaceholderText="Choose email"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Spacing="6">
                    <TextBlock Text="CREATE PASSWORD"
                               FontSize="12"
                               Foreground="#666666"
                               CharacterSpacing="120"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="48"
                                 CornerRadius="12"
                                 Background="#fafafa"
                                 BorderBrush="#dddddd"
                                 Padding="15,0"
                                 PlaceholderText="Create secure password"/>
                </StackPanel>

                <!-- Confirm -->
                <StackPanel Spacing="6">
                    <TextBlock Text="CONFIRM PASSWORD"
                               FontSize="12"
                               Foreground="#666666"
                               CharacterSpacing="120"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Height="48"
                                 CornerRadius="12"
                                 Background="#fafafa"
                                 BorderBrush="#dddddd"
                                 Padding="15,0"
                                 PlaceholderText="Repeat password"/>
                </StackPanel>

                <!-- Role -->
                <StackPanel Spacing="6">
                    <TextBlock Text="ACCESS LEVEL"
                               FontSize="12"
                               Foreground="#666666"
                               CharacterSpacing="120"/>
                    <ComboBox x:Name="RoleComboBox"
                              Height="48"
                              CornerRadius="12"
                              Background="#fafafa"
                              BorderBrush="#dddddd"
                              Padding="15,0"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Standard Member" Tag="1"/>
                        <ComboBoxItem Content="Owner" Tag="2"/>
                    </ComboBox>
                </StackPanel>

                <!-- Error -->
                <TextBlock x:Name="ErrorMessage"
                           Foreground="#c00000"
                           Visibility="Collapsed"
                           FontSize="13"
                           TextWrapping="Wrap"/>

                <!-- Register Button -->
                <Button x:Name="RegisterButton"
                        Content="JOIN PRIVATE NETWORK"
                        Click="RegisterButton_Click"
                        Height="55"
                        CornerRadius="14"
                        Background="Black"
                        Foreground="White"
                        FontWeight="SemiBold"
                        CharacterSpacing="120"/>

                <!-- Back -->
                <HyperlinkButton Content="Return to Login"
                                 Click="BackToLoginButton_Click"
                                 Foreground="Black"
                                 HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>

        <ProgressRing x:Name="LoadingRing"
                      Width="60"
                      Height="60"
                      IsActive="False"
                      Visibility="Collapsed"
                      Foreground="Black"/>
    </Grid>
</Page>