<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Dreamscape.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dreamscape.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f5f5f5">

        <!-- Subtle luxury background pattern -->
        <Grid>
            <Rectangle Fill="#f5f5f5"/>
            <Rectangle Fill="#000000"
                       Opacity="0.02"/>
        </Grid>

        <!-- Main Card -->
        <Border Width="460"
                Padding="50"
                CornerRadius="20"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#e5e5e5"
                BorderThickness="1">

            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <StackPanel Spacing="28">

                <!-- Logo / Title -->
                <StackPanel Spacing="6" HorizontalAlignment="Center">
                    <TextBlock Text="DREAMSCAPE"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               CharacterSpacing="200"/>
                    <TextBlock Text="PRIVATE ACCESS"
                               FontSize="12"
                               Foreground="#888888"
                               CharacterSpacing="150"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Rectangle Height="1"
                           Fill="#eeeeee"
                           Margin="0,10"/>

                <!-- Username -->
                <StackPanel Spacing="6">
                    <TextBlock Text="USERNAME"
                               FontSize="12"
                               Foreground="#666666"
                               CharacterSpacing="120"/>
                    <TextBox x:Name="UsernameTextBox"
                             PlaceholderText="Enter your username"
                             Height="45"
                             CornerRadius="10"
                             Background="#fafafa"
                             BorderBrush="#dddddd"
                             Padding="15,0"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Spacing="6">
                    <TextBlock Text="PASSWORD"
                               FontSize="12"
                               Foreground="#666666"
                               CharacterSpacing="120"/>
                    <PasswordBox x:Name="PasswordBox"
                                 PlaceholderText="Enter your password"
                                 Height="45"
                                 CornerRadius="10"
                                 Background="#fafafa"
                                 BorderBrush="#dddddd"
                                 Padding="15,0"/>
                </StackPanel>

                <!-- Error -->
                <TextBlock x:Name="ErrorMessage"
                           Foreground="#c00000"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"
                           FontSize="13"/>

                <!-- Login Button -->
                <Button x:Name="LoginButton"
                        Content="ENTER PLATFORM"
                        Click="LoginButton_Click"
                        Height="50"
                        CornerRadius="12"
                        FontWeight="SemiBold"
                        CharacterSpacing="100"
                        Background="Black"
                        Foreground="White"/>

                <!-- Register Button -->
                <Button x:Name="RegistratieButton"
                        Content="Registeer"
                        Click="RegistratieButton_Click"
                        Height="45"
                        CornerRadius="12"
                        Background="#f0f0f0"
                        Foreground="Black"
                        BorderBrush="#dddddd"/>

                <ProgressRing x:Name="LoadingRing"
                              Visibility="Collapsed"
                              IsActive="False"
                              HorizontalAlignment="Center"
                              Foreground="Black"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>